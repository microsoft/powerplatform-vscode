{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "out",
    "rootDir": "src",
    "lib": [ "es2019", "WebWorker", "DOM.Iterable", "ES2020.Promise" ],
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
		"strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test-web"
  ]
}
