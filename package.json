{
  "name": "powerplatform-vscode",
  "displayName": "Power Platform VS Code Extension",
  "description": "Tooling to create Power Platform packages and manage Power Platform environments",
  "version": "0.0.1",
  "scripts": {
    "clean": "scorch",
    "build": "node node_modules/gulp/bin/gulp.js",
    "test": "node node_modules/gulp/bin/gulp.js test",
    "ci": "node node_modules/gulp/bin/gulp.js ci",
    "dist": "node node_modules/gulp/bin/gulp.js dist"
  },
  "author": "PowerApps-ISV-Tools",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/powerplatform-vscode"
  },
  "bugs": {
    "url": "https://github.com/microsoft/powerplatform-vscode/issues",
    "email": "PPTools@microsoft.com"
  },
  "engines": {
    "vscode": "^1.51.0"
  },
  "publisher": "microsoft-IsvExpTools",
  "main": "./dist/extension.js",
  "categories": [
    "Other"
  ],
  "icon": "assets/icon.png",
  "keywords": [
    "Power Platform"
  ],
  "preview": true,
  "badges": [
    {
      "description": "PR Loop",
      "url": "https://github.com/microsoft/powerplatform-vscode/workflows/PullRequest/badge.svg",
      "href": "https://github.com/microsoft/powerplatform-vscode/actions?query=workflow%3APullRequest"
    }
  ],
  "activationEvents": [
    "onCommand:microsoft-IsvExpTools.pac.createTerminal",
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "pacCLI.openDocumentation",
        "title": "pac PowerApps CLI: Documentation"
      }
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.6",
    "@types/vscode": "^1.51.0",
    "@types/webpack": "^4.41.25",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chai": "^4.2.0",
    "eslint": "^7.12.1",
    "fancy-log": "^1.3.3",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-mocha": "^7.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mocha": "^8.2.1",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.1",
    "ps-list": "^7.2.0",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "vsce": "^1.81.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-stream": "^6.1.1",
    "yargs": "^16.2.0"
  },
  "dependencies": {
    "unzip-stream": "^0.3.1"
  }
}
