{
  "name": "powerplatform-vscode",
  "displayName": "Power Platform VS Code Extension",
  "description": "Tooling to create Power Platform packages and manage Power Platform environments",
  "version": "0.0.1-dev",
  "scripts": {
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "clean": "scorch",
    "build": "node node_modules/gulp/bin/gulp.js",
    "test": "node node_modules/gulp/bin/gulp.js test",
    "ci": "node node_modules/gulp/bin/gulp.js ci",
    "dist": "node node_modules/gulp/bin/gulp.js dist",
    "set-git-authn": "node node_modules/gulp/bin/gulp.js setGitAuthN",
    "increment-version": "node node_modules/release-it/bin/release-it --increment patch --preRelease=alpha --ci -VV"
  },
  "author": "PowerApps-ISV-Tools",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/microsoft/powerplatform-vscode/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/powerplatform-vscode"
  },
  "bugs": {
    "url": "https://github.com/microsoft/powerplatform-vscode/issues",
    "email": "PPTools@microsoft.com"
  },
  "engines": {
    "vscode": "^1.51.0"
  },
  "publisher": "microsoft-IsvExpTools",
  "main": "./client/out/extension.js",
  "categories": [
    "Snippets",
    "Other"
  ],
  "icon": "client/assets/icon.png",
  "keywords": [
    "Power Platform"
  ],
  "preview": true,
  "badges": [
    {
      "description": "Pull Request",
      "url": "https://github.com/microsoft/powerplatform-vscode/workflows/PullRequest/badge.svg",
      "href": "https://github.com/microsoft/powerplatform-vscode/actions?query=workflow%3APullRequest"
    },
    {
      "description": "Official Build",
      "url": "https://dev.azure.com/dynamicscrm/OneCRM/_apis/build/status/DPX-Tools/powerplatform-vscode%20Official%20Build?branchName=release/stable",
      "href": "https://dev.azure.com/dynamicscrm/OneCRM/_build/latest?definitionId=12152"
    }
  ],
  "activationEvents": [
    "onCommand:pacCLI.openDocumentation",
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "powerplatform-vscode",
      "properties": {
        "powerplatform-vscode.enablePortalFeatures": {
          "type": "boolean",
          "default": false,
          "description": "Enable Portal features in VSCode Extension"
        }
      }
    },
    "commands": [
      {
        "command": "pacCLI.openDocumentation",
        "title": "pac PowerApps CLI: Documentation"
      },
      {
        "command": "microsoft-powerapps-portals.preview-show",
        "title": "PowerApps Portal -> Show preview",
        "icon": {
          "dark": "./client/editor_menu_icons/dark/Show preview.svg",
          "light": "./client/editor_menu_icons/light/Show preview.svg"
        }
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./client/snippets/paportal-liquid.code-snippets"
      }
    ],
    "iconThemes": [
      {
        "id": "portals_icon",
        "label": "PowerApps Portals Icons (Visual Studio Code)",
        "path": "./client/portal_fileicons/portals-icon-theme.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == html",
          "command": "microsoft-powerapps-portals.preview-show",
          "alt": "microsoft-powerapps-portals.preview-show",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "microsoft-powerapps-portals.preview-show",
          "when": "never"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.6",
    "@types/vscode": "^1.51.0",
    "@types/webpack": "^4.41.25",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chai": "^4.2.0",
    "eslint": "^7.12.1",
    "fancy-log": "^1.3.3",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-mocha": "^7.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mocha": "^8.2.1",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.1",
    "ps-list": "^7.2.0",
    "release-it": "^14.2.2",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "vsce": "^1.81.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-stream": "^6.1.1",
    "yargs": "^16.2.0"
  },
  "dependencies": {
    "find-process": "^1.4.4"
  }
}
