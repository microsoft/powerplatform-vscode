{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "out",
    "rootDir": "src",
    "lib": [ "es2020", "WebWorker", "DOM.Iterable", "ES2020.Promise" ],
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test-web"
  ]
}